<!doctype html>
<html>
    <head>
        <title>Meadowlark Travel</title>
        {{#if showTests}}
            <link rel='stylesheet' href='/vendor/mocha.css'>
        {{/if}}
    </head>
    <body>
        <header><img src='/img/logo.jpg' alt="Meadowlark Travel Logo"></header>

        {{{body}}}  <!-- this tags will be replaced with the requested HTML file for each view -->

        <script src="//code.jquery.com/jquery-3.3.1.min.js"></script> <!-- import jQuery CDN -->
        <script>window.jQuery || document.write('<script src="/vendor/js/jquery-3.3.1.min.js"><\/script>')</script>
        {{{_sections.jquery}}}
        
        {{#if showTests}} <!-- if showTests is true, run the tests -->
            <div id='mocha'></div> <!-- required div to run mocha -->
            <script src='/vendor/mocha.js'></script>
            <script src='/vendor/chai.js'></script> <!-- use the mocha and chai js scripts -->
            <script>
                mocha.ui('tdd');
                assert = chai.assert;</script>
            <script src='/qa/tests-global.js'></script> <!-- use custom test script -->
            {{#if pageTestScript}} <!-- if we want to test specific pages -->
                <script src='{{pageTestScript}}'></script> <!-- {{pageTestScript}} will be replaced by the given js file -->
            {{/if}}
            <script>mocha.run();</script> <!-- run the tests -->
        {{/if}}
    </body>
</html>